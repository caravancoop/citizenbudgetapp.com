<%= semantic_form_for [:admin, resource] do |f| %>
  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :organization %>
    <%= f.input :role, as: :radio, collection: AdminUser::ROLES.map{|r| [t(r, scope: :role), r]} %>
    <%= f.input :locale, as: :radio, collection: Locale.locales.map{|k,v| [v, k]} << [t('.automatic'), ''] %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit %>
    <li class="cancel">
      <%= link_to t('active_admin.cancel'), action: :index %>
    </li>
  <% end %>
<% end %>
