<% present questionnaire do |questionnaire| %>
<div class="panel">
  <h3>
    <%= auto_link questionnaire.organization %>
    â€“
    <%= auto_link questionnaire %>
  </h3>
  <div class="panel_contents">
    <div class="columns clearfix">
      <div class="column">
        <div class="attributes_table narrow">
          <table>
            <tbody>
              <tr>
                <th>
                  <%= t '.table.days_elapsed_header' %>
                </th>
                <td>
                  <%= t '.table.days', count: questionnaire.days_elapsed %>
                </td>
              </tr>
              <tr>
                <th>
                  <%= t '.table.days_left_header' %>
                </th>
                <td>
                  <%= t '.table.days', count: questionnaire.days_left %>
                </td>
              </tr>
              <tr>
                <th>
                  <%= t '.table.summary_report_header' %>
                </th>
                <td>
                  <%= link_to t('.table.view'), admin_dashboard_summary_path(id: questionnaire) %>
                </td>
              </tr>
              <tr>
                <th>
                  <%= t '.table.download_raw_header' %>
                </th>
                <td>
                  <% %w(csv tsv xls xlsx).each do |format| %>
                    <%= link_to format, admin_dashboard_raw_path(id: questionnaire, format: format) %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
