<div class="container">
  <% if @questionnaire %>
    <% if @questionnaire.future? && @questionnaire.content_before.present? %>
      <%= markdown @questionnaire.content_before %>
    <% elsif @questionnaire.past? && @questionnaire.content_after.present? %>
      <%= markdown @questionnaire.content_after %>
    <% else %>
      <%= render partial: 'offline' %>
    <% end %>
  <% else %>
    <%= render partial: 'offline' %>
  <% end %>
</div>
