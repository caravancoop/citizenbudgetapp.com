= object.title.html_safe
- if object.respond_to?(:required?) && object.required?
  %abbr(title="#{t '.required'}")*
- if object.extra?
  %span
    %span.icon-info-sign(title='information icon')
    - if object.extra_url?
      = link_to custom_or_default(@questionnaire.read_more, t('.read_more')), object.extra_url, target: '_blank'
    - else
      %span.popover-toggle(data-content="#{escape_attribute(markdown(object.extra)).html_safe}" data-placement="#{placement}" data-html="#{true}" aria-role="button" tabindex="0" title="#{custom_or_default(@questionnaire.read_more, t('.read_more'))}")
        = custom_or_default(@questionnaire.read_more, t('.read_more'))
- if object.embed?
  %span
    %span.icon-info-sign(title='information icon')
    = link_to t('.view_media'), "##{object.title.parameterize}_embed", 'data-toggle' => 'modal', 'rel' => 'tooltip', 'title' => t('.view_media_tip')
